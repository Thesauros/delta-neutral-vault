{
  "name": "delta-neutral-vault",
  "version": "0.1.0",
  "description": "Delta Neutral Vault Protocol - A sophisticated DeFi vault for maintaining delta-neutral positions on Solana",
  "main": "index.js",
  "scripts": {
    "build": "anchor build",
    "test": "anchor test",
    "deploy": "anchor deploy",
    "deploy:devnet": "anchor deploy --provider.cluster devnet",
    "deploy:mainnet": "anchor deploy --provider.cluster mainnet",
    "setup": "ts-node scripts/setup.ts",
    "lint": "cargo clippy",
    "format": "cargo fmt",
    "clean": "anchor clean",
    "idl": "anchor idl parse --file target/idl/delta_neutral_vault.json src/lib.rs",
    "verify": "anchor verify",
    "upgrade": "anchor upgrade",
    "migrate": "ts-node scripts/migrate.ts"
  },
  "keywords": [
    "solana",
    "defi",
    "vault",
    "delta-neutral",
    "anchor",
    "blockchain"
  ],
  "author": "Delta Neutral Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/delta-neutral-vault/protocol"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.28.0",
    "@solana/web3.js": "^1.87.0",
    "@solana/spl-token": "^0.3.9",
    "bs58": "^5.0.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "chai": "^4.3.0",
    "eslint": "^8.0.0",
    "mocha": "^9.0.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^4.9.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
